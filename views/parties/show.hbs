<div class="showParty">
  <h2>{{party.name}}</h2>

  <!--<span class="entry-date block font-3-4 c-lt-gray">Written on long_form_date(entry.createdAt)</span>-->
  {{!-- <span class="entry-date block font-3-4 c-lt-gray">Written on {{entry.createdAt}}</span> --}}
  <p>Location: {{party.location}}</p>
  <p>Date: {{party.date}}</p>
  <p>Host: {{party.author}}</p>

  {{#if user}}

  <ul class="no-bullets no-padding mar-t-2">
    <li class="pipe-separate left">
      <a href="/parties/{{ party.id }}/edit" class="c-white">edit</a>
    </li>

    <li class="pipe-separate left">
      <form method="post" action="/entries/{{entry.id}}" class="inline">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="delete" class="no-border no-outline no-bg c-white hover-underline">
      </form>
    </li>
    {{/if}}
  </ul>
</div>